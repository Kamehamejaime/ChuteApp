<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/titleNewTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chubby"
        android:gravity="center"
        android:text="Nuevo Equipo"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleNewTeam">

        <EditText
            android:id="@+id/nomEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de equipo"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad de Jugadores"
            android:id="@+id/cantPlayers"
            android:inputType="number"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/btnNewTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"
            android:text="Crear"
            android:onClick="onClickCrearEquipo"/>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

